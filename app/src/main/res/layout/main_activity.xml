        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/the_application_also_don_t_stores_your_password_so_its_definitely_safe_so_lets_start"
        android:textColor="#4C0CDC"
        android:layout_marginTop="20dp"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_the_app"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="@string/siddhantsingh01021998_gmail_com"
